<header class="px-4 sm:px-6 lg:px-8">
  <div class="flex items-center justify-between border-b border-zinc-100 py-3 text-sm">
    <div class="flex items-center gap-4">
      <a href="/" class="text-6xl">
        ğŸ¥˜
      </a>
    </div>

    <div class="flex items-center gap-6 font-semibold leading-6 text-xl">
      <%= if @current_user do %>
        <.link href={~p"/"} class="hover:text-blue-600 transition-colors">
          Recipe Finder
        </.link>

        <.link href={~p"/saved"} class="hover:text-blue-600 transition-colors">
          Saved Recipes
        </.link>
      <% else %>
      <% end %>
      <%= if @current_user do %>
        <span class="text-sm">Welcome, {@current_user.email}!</span>
        <.link href={~p"/users/settings"} class="text-blue-600 hover:underline">Settings</.link>
        <.link href={~p"/users/log_out"} method="delete" class="text-red-600 hover:underline">
          Log out
        </.link>
      <% else %>
        <.link href={~p"/users/register"} class="text-blue-600 hover:underline">Register</.link>
        <.link href={~p"/users/log_in"} class="text-blue-600 hover:underline">Log in</.link>
      <% end %>
    </div>
  </div>
</header>

<main class="px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-2xl">
    <.flash_group flash={@flash} />
    {@inner_content}
  </div>
</main>
